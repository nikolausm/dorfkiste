# Development Dockerfile for Dorfkiste
FROM node:20-alpine

WORKDIR /app

# Install system dependencies
RUN apk add --no-cache \
    libc6-compat \
    git \
    curl \
    redis

# Copy package files
COPY package*.json ./
COPY prisma ./prisma/

# Install dependencies
RUN npm install

# Generate Prisma client
RUN npx prisma generate

# Copy source code
COPY . .

# Create uploads directory
RUN mkdir -p public/uploads

# Expose port
EXPOSE 3000
EXPOSE 3001

# Development command with hot reload
CMD ["npm", "run", "dev"]