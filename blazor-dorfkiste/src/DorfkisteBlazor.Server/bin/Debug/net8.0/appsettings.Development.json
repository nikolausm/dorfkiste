{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=dorfkiste-dev.db",
    "Redis": "localhost:6379"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.EntityFrameworkCore": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/dorfkiste-dev-.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "JwtSettings": {
    "SecretKey": "DorfkisteBlazorDevelopmentSecretKey2024!@#$%^&*()_+",
    "Issuer": "DorfkisteBlazor",
    "Audience": "DorfkisteBlazorUsers",
    "ExpirationInDays": 7
  },
  "Authentication": {
    "Google": {
      "ClientId": "YOUR_GOOGLE_CLIENT_ID_DEV",
      "ClientSecret": "YOUR_GOOGLE_CLIENT_SECRET_DEV"
    },
    "Facebook": {
      "AppId": "YOUR_FACEBOOK_APP_ID_DEV",
      "AppSecret": "YOUR_FACEBOOK_APP_SECRET_DEV"
    }
  },
  "Email": {
    "Provider": "SendGrid",
    "SendGrid": {
      "ApiKey": "YOUR_SENDGRID_API_KEY_DEV",
      "FromEmail": "dev@dorfkiste.com",
      "FromName": "Dorfkiste Development"
    }
  },
  "Storage": {
    "Provider": "Local",
    "Local": {
      "Path": "wwwroot/uploads",
      "BaseUrl": "https://localhost:5001/uploads"
    },
    "Azure": {
      "ConnectionString": "YOUR_AZURE_CONNECTION_STRING_DEV",
      "ContainerName": "uploads-dev"
    }
  },
  "ApplicationSettings": {
    "Name": "DorfkisteBlazor Development",
    "Version": "1.0.0-dev",
    "Environment": "Development",
    "BaseUrl": "https://localhost:5001",
    "MaxUploadSizeInMB": 10,
    "AllowedFileExtensions": [".jpg", ".jpeg", ".png", ".gif", ".pdf", ".doc", ".docx"],
    "DefaultPageSize": 20,
    "CacheExpirationInMinutes": 10,
    "EnableDetailedErrors": true,
    "EnableSensitiveDataLogging": true
  },
  "Database": {
    "EnableSensitiveDataLogging": true,
    "EnableDetailedErrors": true,
    "CommandTimeout": 30,
    "EnableAutomaticMigrations": true,
    "SeedTestData": true
  },
  "AllowedHosts": "*"
}