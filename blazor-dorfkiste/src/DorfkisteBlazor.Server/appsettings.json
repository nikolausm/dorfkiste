{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=dorfkiste-dev.db",
    "Redis": "localhost:6379"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Information",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    }
  },
  "JwtSettings": {
    "SecretKey": "your-secret-key-here",
    "Issuer": "DorfkisteBlazor",
    "Audience": "DorfkisteBlazorUsers",
    "ExpirationInDays": 7
  },
  "Authentication": {
    "Google": {
      "ClientId": "",
      "ClientSecret": ""
    },
    "Facebook": {
      "AppId": "",
      "AppSecret": ""
    }
  },
  "Email": {
    "Provider": "SendGrid",
    "SendGrid": {
      "ApiKey": "",
      "FromEmail": "noreply@dorfkiste.com",
      "FromName": "Dorfkiste"
    }
  },
  "Storage": {
    "Provider": "Azure",
    "Azure": {
      "ConnectionString": "",
      "ContainerName": "uploads"
    }
  },
  "ApplicationSettings": {
    "Name": "DorfkisteBlazor",
    "Version": "1.0.0",
    "Environment": "Development",
    "BaseUrl": "https://localhost:5001",
    "MaxUploadSizeInMB": 10,
    "AllowedFileExtensions": [".jpg", ".jpeg", ".png", ".gif", ".pdf", ".doc", ".docx"],
    "DefaultPageSize": 20,
    "CacheExpirationInMinutes": 60
  },
  "AllowedHosts": "*"
}