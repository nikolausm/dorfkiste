# DorfkisteBlazor - Environment Configuration Template
# Infrastructure & DevOps Agent - Environment Variables

# ==================================================
# Application Configuration
# ==================================================
ASPNETCORE_ENVIRONMENT=Production
BASE_URL=https://your-domain.com
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# ==================================================
# Database Configuration
# ==================================================
SQL_SERVER=sqlserver
SQL_DATABASE=DorfkisteBlazor
SQL_USER=sa
SQL_PASSWORD=YourStrong@Passw0rd

# ==================================================
# Redis Configuration
# ==================================================
REDIS_CONNECTION_STRING=redis:6379
REDIS_PASSWORD=

# ==================================================
# Azure Storage Configuration
# ==================================================
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=yourstorageaccount;AccountKey=yourkey;EndpointSuffix=core.windows.net

# ==================================================
# Email Configuration (SendGrid)
# ==================================================
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# ==================================================
# Authentication Configuration
# ==================================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# ==================================================
# Security Configuration
# ==================================================
JWT_SECRET_KEY=your-super-secret-jwt-key-that-is-very-long-and-secure
JWT_ISSUER=DorfkisteBlazor
JWT_AUDIENCE=DorfkisteBlazor

# ==================================================
# SSL/TLS Configuration
# ==================================================
CERT_PASSWORD=dev
SSL_CERT_PATH=/etc/ssl/certs/dorfkiste.crt
SSL_KEY_PATH=/etc/ssl/private/dorfkiste.key

# ==================================================
# Monitoring & Logging Configuration
# ==================================================
SEQ_SERVER_URL=http://seq:5341
SEQ_API_KEY=

# ==================================================
# Performance Configuration
# ==================================================
MAX_UPLOAD_SIZE_MB=10
CACHE_EXPIRATION_MINUTES=60
CONNECTION_TIMEOUT_SECONDS=30

# ==================================================
# Development Overrides
# ==================================================
# Uncomment for development
# ASPNETCORE_ENVIRONMENT=Development
# SQL_PASSWORD=DevPassword123!
# SQL_DATABASE=DorfkisteBlazor_Dev
# BASE_URL=https://localhost:5001